<Page x:Class="FrontDeskHotel.CheckInOut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDeskHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckInOut">

    <Grid>
        <Canvas>
            <Label Content="Check in/out" FontSize="15" Height="27" Width="123" FontFamily="Arial Black" Canvas.Left="10" Canvas.Top="10"/>
            <Button x:Name="checkInBtn" Content="Check in" BorderThickness="2,2,2,2" Height="46" Width="132" Cursor="Hand" Background="White" FontFamily="Arial Black" Click="checkInBtn_Click" Canvas.Left="10" Canvas.Top="50" BorderBrush="Black"/>
            <Button x:Name="checkOutBtn" Content="Check out" BorderThickness="2,2,2,2" Height="48" Width="132" Cursor="Hand" Background="White" FontFamily="Arial Black" Click="checkOutBtn_Click" Canvas.Left="10" Canvas.Top="117" BorderBrush="Black"/>
        </Canvas>

        <Frame x:Name="checkFrame" NavigationUIVisibility="Hidden" Margin="156,0,0,0"/> 
    </Grid>
</Page>
