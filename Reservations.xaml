<Page x:Class="FrontDeskHotel.Reservations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDeskHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reservations"
      Loaded="Reservation_OnLoaded">

    <Grid>
        <Label  Content ="Reservation" x:Name="label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Arial Black"/>
        <Button x:Name ="addResBtn" Content="Add new reservarion" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Height="42" Width="147" FontFamily="Arial Black" Background="White" Cursor="Hand" Click="addResBtn_Click"/>
        <Button x:Name="deleteResBtn" Content="Delete reservation" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Height="43" Width="147" FontFamily="Arial Black" Background="White" Cursor="Hand" Click="deleteResBtn_Click"/>

        <Frame  x:Name="resFrame" NavigationUIVisibility="Hidden" Margin="177,10,0,0" />

        
        
    </Grid>
</Page>
