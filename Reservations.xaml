<Page x:Class="FrontDeskHotel.Reservations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDeskHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reservations"
      Loaded="Reservation_OnLoaded">

    <Grid>

        <Canvas Margin="0,0,626,249">
            <Label  Content ="Reservation" x:Name="label" FontFamily="Arial Black" FontSize="15" Canvas.Left="10" Canvas.Top="10"/>
            <Button x:Name ="addResBtn" Content="Add new reservarion"  Height="42" Width="147" FontFamily="Arial Black" Background="White" Cursor="Hand" Click="addResBtn_Click" Canvas.Left="10" Canvas.Top="54"/>
            <Button x:Name="deleteResBtn" Content="Delete reservation"  Height="43" Width="147" FontFamily="Arial Black" Background="White" Cursor="Hand" Click="deleteResBtn_Click" Canvas.Left="10" Canvas.Top="119"/>
        </Canvas>
        

        <ScrollViewer x:Name="scrollviewer"  Margin="191,0,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="resPanel" VerticalAlignment="Top">

            </StackPanel>
        </ScrollViewer>
        <Frame  x:Name="resFrame" NavigationUIVisibility="Hidden" Margin="174,0,0,0" />
    </Grid>
</Page>
