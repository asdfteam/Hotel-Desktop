<Page x:Class="FrontDeskHotel.SearchCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDeskHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchCustomer">

    <Grid>

        <Canvas x:Name="searchCanvas" Margin="0,0,621,361">
            <Button x:Name="searchBtn" Content="Search" BorderThickness="2,2,2,2" Canvas.Left="56" Canvas.Top="56" Click="SearchBtn_Click" FontFamily="Arial Black" Background="White" Width="120" Cursor="Hand" Height="23" BorderBrush="Black"/>
            <TextBox Canvas.Left="56" Canvas.Top="29" Text="{Binding nameInput, Mode=TwoWay}" TextWrapping="Wrap" Width="120" BorderBrush="Black"/>
            <Label x:Name="nameLabel" Content="Name: " Canvas.Top="23" FontFamily="Arial Black"/>

        </Canvas>

        <Frame x:Name="searchFrame" Margin="206,0,0,0"/>

    </Grid>
</Page>
