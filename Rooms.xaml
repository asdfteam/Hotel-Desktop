<Page x:Class="FrontDeskHotel.Rooms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDeskHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rooms"
      Loaded="Room_OnLoaded">

    <Grid>

        <Canvas Margin="0,10,630,301">
            <Label Content="Rooms " FontSize="15"  Height="27" Width="65" FontFamily="Arial Black" Canvas.Left="10"  />
            <Button x:Name ="searchBtn" Content="Search"  BorderThickness="2,2,2,2" Height="42" Width="147" FontFamily="Arial Black" Background="White" Cursor="Hand" Click="SearchBtn_Click" Canvas.Left="10" Canvas.Top="44" BorderBrush="Black"/>
        </Canvas>

        <ScrollViewer x:Name="scrollviewer" VerticalScrollBarVisibility="Auto" Margin="175,0,0,0">
            <StackPanel x:Name="roomPanel" VerticalAlignment="Top">

            </StackPanel>
        </ScrollViewer>

        <Frame x:Name="roomsFrame" NavigationUIVisibility="Hidden" Margin="183,10,10,10"/>
    </Grid>
</Page>
