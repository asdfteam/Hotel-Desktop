<Page x:Class="FrontDeskHotel.CheckIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDeskHotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckIn">

    <Grid>
        <Canvas Margin="0,0,524,319">
            <Label Content="Check In" Canvas.Left="10" Canvas.Top="10" FontFamily="Arial Black" FontSize="15"/>
            <TextBox x:Name="Input" Text="{Binding InputName, Mode=TwoWay}" Canvas.Left="107" Canvas.Top="15" TextWrapping="Wrap" Width="137" Height="22"/>
            <Button x:Name="CheckInBtn" BorderThickness="2,2,2,2" Content="Check In" Canvas.Left="107" Canvas.Top="46" Height="31" Width="137" FontFamily="Arial Black" BorderBrush="Black" Background="White" Click="CheckInBtn_Click"/>
        </Canvas>


    </Grid>
</Page>
